generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Auth_Provider {
  google
  creadintial
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  profile   String?
  address   String?
  phone     String?  @unique
  password  String?
  provider   Auth_Provider @default(creadintial)
  providerId String  @unique
  role      Role    @default(USER)
  status    Status   @default(active)
  isDeleted Boolean  @default(false)
  bookings  Booking[]
  payments  Payment[]
  promos   PromoUsage[]
  reviews   Review[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@map("users")

}
enum BookingStatus {
  pending
  paid
  canceled
}

enum Role {
  USER
  ADMIN
}

enum Status {
  active
  inactive
}

enum PropertyStatus {
  available
  unavailable
  booked
  sold
}

model Property {
  id          String   @id @default(uuid())
  name        String
  images      String[]
  slug        String    @unique
  description String?
  location    String
  views       Int       @default(0)
  price       Float
  bedrooms    Int
  bathrooms   Int
  amenities   String[]
  status      PropertyStatus    @default(available)
  isBooked    Boolean   @default(false)
  booking     Booking[]
review  Review?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([slug])
  @@index([location])
  @@index([price])
  @@map("properties")
}

model Blog{
  id          String    @id @default(uuid())
  title       String
  image       String
  slug        String    @unique
  excerpt     String
  content     String
  category    String
  tags        String[]
  status      BlogStatus @default(draft)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Promo {
  id          String    @id @default(uuid())
  code        String    @unique
  discount    Float
  validFrom   DateTime
  validTo     DateTime

  usage      PromoUsage[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model PromoUsage{
  id          String    @id @default(uuid())
  promoId     String
  userId      Int
  usedAt      DateTime  @default(now())

  promo       Promo     @relation(fields: [promoId], references: [id])
  user        User      @relation(fields: [userId], references: [id])

  @@unique([promoId, userId])
}



model Booking {
  id           String           @id @default(uuid())
  userId       Int
  user         User          @relation(fields: [userId], references: [id])
  propertyId   String
  property     Property      @relation(fields: [propertyId], references: [id])
  totalAmount  Decimal       @db.Decimal(12, 2)
  status       BookingStatus @default(pending)
 review       Review?
 isReviewed  Boolean       @default(false)
  payment      Payment?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([userId])
  @@index([propertyId])
  @@index([status])
  @@map("bookings")
}

model Payment {
  id             String            @id @default(uuid())
  bookingId      String  @unique
  booking        Booking        @relation(fields: [bookingId], references: [id])
  provider       PaymentProvider @default(ssl_commerz)
  transactionId  String  @unique
  status         PaymentStatus  @default(pending)
  amount         Decimal       @db.Decimal(12, 2)
  userId         Int
  user           User          @relation(fields: [userId], references: [id])
  rawResponse    Json?

  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([bookingId])
  @@index([provider])
  @@index([transactionId])
}

enum PaymentProvider {
  stripe
  ssl_commerz
}

enum PaymentStatus {
  pending
  succeeded
  failed
  canceled
}

enum BlogStatus {
  draft
  published
}


model Review {
  id          String    @id @default(uuid())
  bookingId   String   @unique
  booking     Booking  @relation(fields: [bookingId], references: [id])
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  propertyId  String   @unique
  property    Property @relation(fields: [propertyId], references: [id])
  rating      Int
  comment     String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("reviews")
}


